<div class="sign-in">
  <h1>Sign in</h1>
  <h3>Unleash the beast in you!</h3>
  <div class="container form-to-sign-in">
    <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <%= f.input :email,
                    required: false,
                    autofocus: true %>
        <%= f.input :password,
                    required: false %>
        <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>

      <div type="button" class="rounded-btn btn btn-dark btn-sm">
        <%= f.button :submit, "Log in" %>
      </div>
    <% end %>
  </div>
</div>

