<div class="container d-flex justify-content-center align-items-center flex-column">
  <h1 class="half-highlight">welcome back, <%= current_user.username %></h1>

  <div class="players d-flex">
    <div class="player d-flex justify-content-center align-items-center">
      <div class="player-name">
        <%= image_tag current_user.avatar, class:'avatar avatar-big shadow' %>
        <h2><%=current_user.username %></h2>
      </div>
      <%= render 'shared/curriculum'%>
    </div>

    <div class="versus-word">
      <p>versus</p>
    </div>

    <div class="player d-flex justify-content-center align-items-center">
      <div class="player-name">
        <%= image_tag @other_user[0].avatar, class:'avatar avatar-big shadow' %>
        <h2><%=@other_user[0].username %></h2>
      </div>
      <%= render 'shared/curriculum_other'%>
    </div>
    
  </div>
</div>