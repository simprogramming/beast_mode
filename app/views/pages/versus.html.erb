<div class="container d-flex justify-content-center align-items-center flex-column">
  <h1>welcome, <%= current_user.username %>.beast</h1>

  <div class="players d-flex">
    <div class="player d-flex justify-content-center align-items-center">
      <div class="player-name">
        <h2><%=current_user.username %>.beast_mode_on</h2>
      </div>

      <div class="curriculum">
        <ul>
          <% @languages.each do |language| %>
            <li><span><%= language.name.downcase %></span></li>
          <% end %>
        </ul>
      </div>
    </div>

    <div class="player d-flex justify-content-center align-items-center">
      <div class="player-name">
        <h2><%=@other_user[0].username %>.beast_mode_on</h2>
      </div>

      <div class="curriculum">
        <ul>
          <% @languages.each do |language| %>
            <li><span><%= language.name.downcase %></span></li>
          <% end %>
        </ul>
      </div>
    </div>
  </div>
</div>