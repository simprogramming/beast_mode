<div class="container">
  <h1>Add a new course to Beast mode</h1>
  <%= simple_form_for(@course) do |f| %>
    <%= f.input :name, placeholder: 'Write the name of the course...'%>
    <%= f.input :link, placeholder: 'Paste the link to the course...'%>
    <%= f.input :language, collection: @languages_names, placeholder: 'Select the corresponding language...' %>
    <%= f.button :submit, class: 'btn btn-dark' %>
  <% end %>
</div>